<div class="inner-body-div">
   <section class="search-section h-20">

      <div class="container">

         <div class="row">

            <div class="col-md-8 d-flex flex-column justify-content-center align-items-center text-center">

               <form class="search-1-form"  action='/search' method='POST'>

                  <select class="search-1" name='exhibitionName'>

                     <option>Select One</option>

                     {{#each exhibitionArray}}

                     <option value='{{this.exhibitionName}}'>{{this.exhibitionName}}-{{this.exhibitionWeek}}</option>

                     {{/each}}

                  </select>

                  <button class="btn btn-primary" type='submit'>Exhibition by Week</button>

               </form>

            </div>

            <div class="col-md-4 d-flex flex-column justify-content-center align-items-center text-center">

               <form action='/searchArtType' method='POST'>

                  <select class="search-2" name='artType'>


                     <option>Select One</option>

                     <option value='Fine Art'>Fine Art</option>
                     <option value='Photography'>Photography</option>
                     <option value='Plastic Art'>Plastic Art</option>

                  </select>

                  <button class="search-2-btn btn btn-primary" type='submit'>Artwork by Type</button>

               </form>


            </div>

         </div>

      </div>

   </section>

   <div class="carouselPartial">
      {{>carouselPartial}}
   </div>

</div>

<div>
   {{>buttonsPartial}}
</div>
