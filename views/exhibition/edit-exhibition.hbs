<div class="inner-body-div">

    <h2>Edit Exhibition:</h2>
    <form action="/exhibition/{{exhibitionToEdit._id}}/edit" method="POST">
        <label>Exhibition Name:
            <input type="text" name="exhibitionName" style="background-color: rgba(0, 255, 255, 0.5);" value="{{exhibitionToEdit.exhibitionName}}" readonly />
        </label><br><br>
        <label>Exhibition Week:
            <input type="text"style="background-color: rgba(0, 255, 255, 0.5);" name="exhibitionWeek" value="{{exhibitionToEdit.exhibitionWeek}}" readonly />
        </label><br><br>

        {{#each exhibitionToEdit.artistApplication}}

        <div>

            <label>Artist's First and Last Name:
                <input type="text" style="background-color: rgba(0, 255, 255, 0.5);" name="firstName" value="{{this.firstName}}" readonly />
            </label><br><br>
            <label>
                <input type="text" style="background-color: rgba(0, 255, 255, 0.5);" name="lastName" value="{{this.lastName}}" readonly />
            </label><br><br>
            <label>Artwork Title:
                <input type="text" style="background-color: rgba(0, 255, 255, 0.5);" name="artworkName" value="{{this.artworkName}}" readonly />
            </label><br><br>

            <label>Application Status:
                <select name="applicationStatus">

                    <option selected value="{{this.applicationStatus}}">{{this.applicationStatus}}</option>
                    <option value="approved">Approved</option>
                    <option value="unapproved">Unapproved</option>
                    <option value="cancelled">Cancelled</option>
                </select><br><br>

        </div>

        {{/each}}

        <label>Exhibition Status Released:
            <select name="exhibitionStatus">
                <option selected value="{{exhibitionToEdit.exhibitionStatus}}">{{exhibitionToEdit.exhibtionStatus}}
                </option>
                <option value="open">Open</option>
                <option value="closed">Closed</option>
                <option value="cancelled">Cancelled</option>
            </select>
        </label><br><br>
        <label>Is Archived:
            <input type="checkbox" name="archived" value="true"/>
            <input type="checkbox" name="archived" value="false"/>
        </label><br><br>

        <button type="submit">Edit Exhibition</button>

    </form>

</div>

<div>

    {{>buttonsPartial}}

</div>
