<div class="inner-body-div">

  <div id="form">
    <h2>Update Username, Email or Password</h2>
    <form action="/usernameEmailUpdate" method="POST">

      <label> Username:
        <input type="text" name="username" value="{{userFromDB.username}}" />
      </label><br><br>

      <label> Email:
        <input type="email" name="email" value="{{userFromDB.email}}" />
      </label><br><br>

      <label> Password:
        <input type="password" name="password" placeholder="********" required />
      </label><br><br>

      <button type="submit">Update account</button><br><br>

      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}

    </form>
  </div>
</div>
<div>
  {{>buttonsPartial}}
</div>
