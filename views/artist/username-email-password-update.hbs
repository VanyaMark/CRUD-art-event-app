
<div id="form">
  <h2>Update Username, Email or Password</h2>
  <form action="/usernameEmailUpdate" method="POST">

    <label> Username
      <input type="text" name="username" value="{{userFromDB.username}}" />
    </label>

    <label> Email
      <input type="email" name="email" value="{{userFromDB.email}}" />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
      
    </label>

    <button type="submit">Update account</button>

    {{!-- error message will be added here --}}
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}

  </form>
</div>
