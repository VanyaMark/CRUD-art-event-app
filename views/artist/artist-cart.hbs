    <label>Artwork URL:</label>
      <input name="artworkUrl" style="background-color: rgba(0, 255, 255, 0.5);" value="{{artistApp.artworkUrl}}"
        readonly />
    
    <label>Art Type:</label>
      <input name="artType" style="background-color: rgba(0, 255, 255, 0.5);" value="{{artistApp.artType}}" readonly />
    
    <label>Wall Size:</label>
      <input class="price-by-wall-size" style="background-color: rgba(0, 255, 255, 0.5);" name="wallSize"
        value="{{artistApp.wallSize}}" readonly />
    
    <label>Description:</label>
      <input name="description" style="background-color: rgba(0, 255, 255, 0.5);" value="{{artistApp.description}}"
        readonly />
    
    <label>Week of Exhibition:</label>
