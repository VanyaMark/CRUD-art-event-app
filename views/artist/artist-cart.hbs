<div class="inner-body-div">
<h2>Application Cart</h2>

{{#if errMsg}}
  <p>{{errMsg}}</p>
  <button><a href="/artistCart"> Pending Application Here </a></button>
{{/if}}

{{#if artistApp}}

<div>
